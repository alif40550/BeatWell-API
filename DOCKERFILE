# Base image with Node.js
FROM node:18-bullseye

# Set working directory
WORKDIR /app

# Install required system dependencies for TensorFlow.js
RUN apt-get update && apt-get install -y \
    python3 \
    build-essential \
    libc++-dev \
    && apt-get clean \
    && rm -rf /var/lib/apt/lists/*

COPY . .
RUN npm install
RUN npm run lint

EXPOSE 8080
CMD ["npm", "run", "start"]