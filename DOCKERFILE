# Use official Node.js runtime as base image
FROM node:20-slim

# Set working directory in container
WORKDIR /usr/src/app

# Copy package.json and package-lock.json (if available)
COPY package*.json ./
COPY .env ./

# Copy source code
COPY . .

# Install dependencies
RUN npm install


# Lint the code
RUN npm run lint

# Test the code
# RUN npm run test

# Expose port 3000
EXPOSE 5173

# Command to run the application
CMD ["npm", "run", "start"]