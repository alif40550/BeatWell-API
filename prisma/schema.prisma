generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id   Int    @id @default(autoincrement())
  name String?
  image String?
  email String @unique
  password String?
  token String?
  history History[]
  healthProfile HealthProfile[]
}
model Activity{
  id Int @id @default(autoincrement())
  name String
  image String
  detail String
}

model History{
  id Int @id @default(autoincrement())
  userId Int
  result Int
  user User @relation(fields: [userId], references: [id])
  createdAt DateTime @default(now())

  @@index([userId])
}

model Trivia{
  id Int @id @default(autoincrement())
  trivia String
}

model HealthProfile{
  id Int @id @default(autoincrement())
  userId Int
  user User @relation(fields: [userId], references: [id])

  @@index([userId])
}

model HealthyFood{
  id Int @id @default(autoincrement())
  name String
  recipe Json
  image String @db.Text
  ingredient Json
}